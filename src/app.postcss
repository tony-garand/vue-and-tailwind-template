/* purgecss start ignore */

.flickity-page-dots {
    bottom: -36px;
}

.flickity-page-dots .dot {
    @apply bg-blue-transparent shadow-light;
    opacity: 1;
}

.flickity-page-dots .dot.is-selected {
    @apply bg-blue shadow-md;
}

@media (min-width: 1024px) {
    #page-header.js-is-sticky.js-is-sticky--change .logo-box,
    #page-header.js-is-stuck .logo-box {
        width: 250px;
        height: auto;
    }
    #page-header.js-is-sticky.js-is-sticky--change .button,
    #page-header.js-is-stuck .button {
        @apply py-2;
    }
}

/* purgecss end ignore */

@media (max-width: 768px) {
    .sm-blue-overlay {
        background: rgba(0,121,199,0.5);
    }
}

.testimonial-hero {
    height: 800px;
    background-image: url('/dist/images/testimonial-background.jpg');
    background-size: cover;
    background-position: center;
}
@media (max-width: 768px) {
    .testimonial-hero {
        height:250px;
    }
}

.boxed-list-item {
  filter: drop-shadow(5px 5px 5px rgba(0, 0, 0, .16));
  list-style-position: inside;
  list-style-type: none;
}

.boxed-list-item span {
  max-width: 660px;
  line-height: 1.75rem;
}
.boxed-list-item div {
  line-height: 1.75rem;
  color: #fff;
  background-color: #0079c7;
  font-weight: 500;
  font-family: Georgia Regular;
  padding-bottom: .5rem;
  padding-right: .5rem;
  box-shadow: 0 5px 5px 0 rgba(0, 0, 0, .16);
  position: relative;
  height: 200px !important;
}
