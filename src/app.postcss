html {
    scroll-behavior: smooth;
}

body {
    @apply text-grey6;
}

.logo-box {
    width: 210px;
    height: auto;
    /* height: 50px; */
}
@media (min-width: 768px) {
    .logo-box {
        width: 337px;
        /* height: 80px; */
    }
}

#hero {
    height: 90vh;
}

.banner-bg {
    background-image: url('/dist/images/banner-marks@2x.png');
    background-size: 157px 186px;
    background-position: -99px 27px;
    background-repeat: no-repeat;
}
@media (min-width: 1024px) {
    .banner-bg {
        background-position: -28px 6px;
    }
}

.banner-button {
    @apply button border-white border-2 font-bold;
    background: transparent;
}
.banner-button:hover {
    background: white;
    @apply text-blue;
}
@media (min-width: 1024px) {
    .banner-button {
        @apply bg-white;
        @apply text-blue;
    }
    .banner-button:hover {
        @apply bg-blue border-blue;
        @apply text-white;
    }
}
@media (min-width: 1024px) and (max-width: 1078px) {
    .banner-button {
        @apply mt-4;
    }
}

.sun-bg {
    width: 1029px;
    height: 1029px;
    left: -800px;
    top: -100px;
    background-image: url('/dist/images/sun-background.png');
    background-size: 1029px 1029px;
    background-position: center center;
    background-repeat: no-repeat;
    content: ' ';
}
@media (min-width: 768px) {
    .sun-bg {
        left: calc(-1029px + 20%);
        top: 50%;
        transform: translateY(-50%);
    }
}

.staff-image {
    max-width: 380px;
}

/* purgecss start ignore */
/* enable Flickity by default */
.main-carousel:after {
  content: 'flickity';
  display: none;
}
@media screen and ( min-width: 768px ) {
  .main-carousel:after {
    content: '';
  }
}
.flickity-viewport {
    overflow: visible;
}
/* purgecss end ignore */

.fact-number {
    @apply text-3/2xl font-display font-normal shadow rounded-full bg-secondary flex items-center justify-center mr-4 shadow absolute pin-l pin-t;
    transform: translate(calc(-50% + 2rem), -50%);
    width: 60px;
    height: 60px;
}
@media (min-width: 768px) {
    .fact-number {
        @apply text-big-number pin-none static shadow-none;
        transform: none;
        min-width: 130px;
        height: 130px;
    }
}

